<% breadcrumb :edit_world_guide_feature, @story, @world_guide_feature %>
<div class="px-4 sm:px-6 lg:px-8 py-8">
  <div class="max-w-screen-xl mx-auto">
    <h1 class="text-center text-3xl md:text-4xl font-bold tracking-tight mt-12 mb-14">特徴を編集しよう！</h1>

    <%= form_with model: @world_guide_feature, url: story_world_guide_feature_path(@story, @world_guide_feature), local: true, class: "max-w-3xl mx-auto space-y-6" do |f| %>
      
      <div>
        <p class="font-bold">【特徴】</p>
        <p class="text-xl ml-4 mt-2"><%= @world_guide_feature.world_feature_category.name %></p>
      </div>
      <div>
        <p class="font-bold">【説明】</p>
        <p class="text-xl ml-4 mt-2"><%= @world_guide_feature.explanation.presence || "未設定" %></p>
      </div>
      
      <div>
        <%= f.label :description, "【詳細説明】", class: "font-bold" %>
        <%= f.text_area :description, class: "mt-2 block w-full border-2 border-gray-300 rounded-md shadow-sm p-4", rows: 10, placeholder: "この特徴に関するより詳細な設定や背景を記述できます。" %>
      </div>

      <div class="flex justify-center space-x-4 pt-4">
        <%= f.submit "特徴を更新する", class: "border border-gray-400 px-6 py-3 rounded-md font-semibold hover:bg-gray-100 transition-colors duration-300" %>
      </div>
    <% end %>
  </div>
</div>
